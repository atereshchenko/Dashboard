@model IEnumerable<Dashboard.Entities.Tile>
@{
    ViewData["Title"] = "Плитки";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <!--<img src="../img/NLMK_engineering_logo_final_rus.png" class="rounded mx-auto d-block" alt="Лого" width="200">-->
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>
<div class="container-fluid g-3 py-3" id="featured-3">
    <div class="row g-3 py-3 row-cols-1 row-cols-lg-5">
        @foreach (var tile in Model)
        {
            <div class="col">
                <div class="card border-@tile.BorderColor.Value shadow-sm">                    
                    <div class="card-body text-@tile.TextColor.Value">
                        <p class="card-text">@tile.Name</p>
                        <p class="fw-light">@tile.Description</p>
                        @if (tile.Link != null)
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-@tile.BorderColor.Value" href="@tile.Link" target="_blank" rel="noreferrer" role="button" onclick="tileclick(@tile.Id)">@tile.LinkName</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section VenderScripts
{    
    <script src="~/js/site.js"></script>
}